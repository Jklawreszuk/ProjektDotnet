@page
@model AddArticleModel
@{
    ViewData["Title"] = "Home page";
}
@if(Model.RecipeViewModel !=null){
    @foreach (var item in Model.RecipeViewModel.Ingredients)
    {
        <h1>@item.Text</h1>
    }
}

<div class="row">
    <div class="col-12">
        <form method="POST" class="form-test">
            <div class="form-group">
                <label asp-for="RecipeViewModel.Name">Tytuł</label>
                <input type="text" class="form-control" asp-for="RecipeViewModel.Name" placeholder="Wpisz swój tytuł tutaj">
                <span asp-validation-for="RecipeViewModel.Name" class="font-weight-bold text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeViewModel.Ingredients">Składniki</label>
                <select class="has-token-skl form-control"  asp-for="RecipeViewModel.Ingredients" multiple></select>
                <span asp-validation-for="RecipeViewModel.Ingredients" class="font-weight-bold text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RecipeViewModel.Description">Opis</label>
                <textarea class="form-control" placeholder="Wpisz swój Opis tutaj"  asp-for="RecipeViewModel.Description"></textarea>
                <span asp-validation-for="RecipeViewModel.Description" class="font-weight-bold text-danger"></span>
            </div>

            <div class="form-group categories">
                <label asp-for="RecipeViewModel.Categories">Kategorie</label>
                <select class="has-token-kat form-control" asp-for="RecipeViewModel.Categories" multiple>
                @foreach (var item in Model.Categories)
                {
                    <option value=@item.Name>@item.Name</option>
                }
                </select>
                <span asp-validation-for="RecipeViewModel.Categories" class="font-weight-bold text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="RecipeViewModel.ProfileImages">Zdjęcia</label>
                <input type='file' class="form-control" asp-for="RecipeViewModel.ProfileImages" accept="image/png, image/jpeg" multiple>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Dodaj przepis</button>
            </div>
                
        </form>
    </div>
</div>