@page "/Article/{id}"
@using Microsoft.AspNetCore.Identity
@using System.IO
@using System.Drawing
@inject UserManager<IdentityUser> UserManager
@model ArticleModel
@{
    ViewData["Title"] = "Artykuł";
}

<div class="row">
    <div class="col-md-auto">
        <h1>
            @Model.Recipe.Name
        </h1>
    </div>
    <div class="col-md-auto">
        <button type="submit" class="d-inline btn btn-primary">Dodaj do ulubionych</button>
    </div>
</div>

<div class="row">

    <div class="col-md-3">
        <h2>
            Składniki:
        </h2>
        <ul>
            @for (int i = 0; i < Model.Ingredients.Count(); i++)
            {
                <li>
                    @Model.Ingredients[i].Name
                </li>
            }
        </ul>
    </div>
    <div class="col-md-5">
        @if(Model.Images?.Count()>0){
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                @for(int i=1;i<Model.Images.Count();i++){
                    <li data-target="#carouselExampleIndicators" data-slide-to=@i></li>
                }
                
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Images[0].Image)" class="d-block w-100" alt="ImageMain">
                </div>
                @for(int i=1;i<Model.Images.Count();i++){
                    <div class="carousel-item">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Images[i].Image)" class="d-block w-100" alt="Image">
                    </div>
                }
                
                
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        }

    </div>

    <div class="col-md-4">
        <div class="row">
            <div class="col-12">
                <h3>
                    @{
                        var userName= @UserManager.FindByIdAsync(Model.Recipe.UserId).Result.UserName;
                    }
                    Autor <a asp-page="/Profile" asp-route-username=@userName>@userName</a>
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h3>
                    Liczba plusów
                </h3>
            </div>
        </div>
    </div>

</div>

    <div class="row">
        <div class="col-md-12">
            <h2>
                Opis wykonania
            </h2>
            <p>
                @Model.Recipe.Description
            </p>
        </div>
    </div>
