@page
@model ProjektDotnet.Pages.MyRecipes.IndexModel

@{
    ViewData["Title"] = "Moje przepisy";
}

<h1>Moje przepisy</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Recipe.Count; i++)
        {
        <tbody class="table-hover">
            <tr>
                <td>@Model.Recipe[i].Name</td>
                <td>@Model.Recipe[i].Description</td>
                <td>@Model.Recipe[i].User.UserName</td>
                <td>@Model.Recipe[i].Date</td>
                <td>
                    <form id="deleteForm@(i)" method="POST">
                        <input type="hidden" asp-for="Id" value="@Model.Recipe[i].Id" />
                        <a onclick="javascript:$('#deleteForm@(i)').submit()">Usu≈Ñ rekord</a>
                    </form>
                </td>


            </tr>
        </tbody>

        }
    </tbody>
</table>
