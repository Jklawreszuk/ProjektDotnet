        <li class="nav-item">
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Wyloguj siÄ™</button>
            </form>
        </li>
    }
    else
    {
        <div class="btn-group" role="group">

                <a class="btn btn-danger" id="register" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
